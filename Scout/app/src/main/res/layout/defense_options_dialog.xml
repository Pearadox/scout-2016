<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/defenseOptionsTitle"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="20sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/defenseOptionsMoveLayout"
        android:layout_below="@+id/defenseOptionsTitle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move to Defense"
            android:id="@+id/defenseOptionsMoveText"
            android:layout_centerVertical="true"
            android:textColor="#000000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/defenseOptionsMoveText"
            android:layout_toLeftOf="@+id/defenseOptionsMoveButton">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/defenseOptionMoveEdit"
                android:hint="Defense Number"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Move"
            android:id="@+id/defenseOptionsMoveButton"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/defenseOptionsDeleteLayout"
        android:layout_below="@+id/defenseOptionsMoveLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/defenseOptionDeleteText"
            android:textColor="#000000"
            android:layout_centerVertical="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Delete"
            android:id="@+id/defenseOptionsDeleteButton"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@+id/defenseOptionsDeleteLayout"
        android:id="@+id/defenseOptionsCancelButton"/>
</RelativeLayout>
